#!/bin/sh
VERSION=grub-2.12
rm -rf $VERSION
tar xzf $VERSION.tar.gz
if [ ! -d grub-ods2 ]; then
    git clone https://github.com/rroart/grub-ods2.git
else
    cd grub-ods2
    git pull
    cd ..
fi
rsync -a grub-ods2/grub/ $VERSION
cd $VERSION
autoreconf -f -i
cd ..
rm -rf build
mkdir build
cd build
../$VERSION/configure --prefix=`pwd`
make
make install
cd ..
